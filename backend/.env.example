# Database
DATABASE_URL="postgresql://username:password@localhost:5432/aid_news"

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# ElevenLabs (for TTS)
ELEVENLABS_API_KEY="your-elevenlabs-api-key"

# Gmail API - Get credentials from Google Cloud Console
# 1. Go to https://console.cloud.google.com/
# 2. Create project and enable Gmail API  
# 3. Create OAuth2 credentials (Desktop application type)
# 4. Use /api/auth/gmail to get authorization and tokens
GMAIL_CLIENT_ID="your-gmail-client-id-from-google-cloud-console"
GMAIL_CLIENT_SECRET="your-gmail-client-secret-from-google-cloud-console" 
GMAIL_REFRESH_TOKEN="will-be-generated-after-oauth-flow"
GMAIL_ACCESS_TOKEN="will-be-generated-after-oauth-flow"
GMAIL_REDIRECT_URI="urn:ietf:wg:oauth:2.0:oob"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Application
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# TLDR Newsletter
TLDR_SENDER_EMAIL="dan@tldrnewsletter.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100